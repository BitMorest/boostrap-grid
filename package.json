{
  "name": "@bitmorest/bootstrap-grid",
  "description": "The bootstrap 5 - grid only without root and reset",
  "version": "0.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/BitMorest/bootstrap-grid"
  },
  "author": {
    "name": "John Martin",
    "url": "https://github.com/johnitvn",
    "email": "john.itvn@gmail.com"
  },
  "main": "css/bootstrap.css",
  "sass": "scss/bootstrap.scss",
  "style": "css/bootstrap.css",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "lint": "stylelint \"**/*.scss\"",
    "release": "yarn version && yarn publish --access publish",
    "build": "run-p -l build:css build:minify",
    "build:css": "sass ./scss/bootstrap-grid.scss ./css/bootstrap-grid.css --load-path=./node_modules",
    "build:minify": "sass ./scss/bootstrap-grid.scss ./css/bootstrap-grid.min.css --load-path=./node_modules --style compressed",
    "prepublishOnly": "yarn build"
  },
  "files": [
    "scss/**/*",
    "css/**/*",
    "README.md",
    "package.json"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-scss": "^4.0.6",
    "sass": "^1.57.1"
  },
  "dependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "bootstrap": "~5.2.3",
    "husky": "^8.0.3",
    "stylelint": "^14.16.1",
    "stylelint-scss": "^4.3.0",
    "tslib": "^2.3.0"
  }
}
